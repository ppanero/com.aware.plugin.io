<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/io_layout" android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="IO Status: initializing (Refresh time 2 min 30 seg)"
            android:id="@+id/io_status" android:textColor="#ff000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Elapsed time: initializing"
            android:id="@+id/io_elapsed_time" android:textColor="#ff000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last update: initializing"
            android:id="@+id/io_last_update" android:textColor="#ff000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Accelerometer: initializing"
            android:id="@+id/io_accelerometer" android:textColor="#ff000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Magnetometer: initializing"
            android:id="@+id/io_magnetometer" android:textColor="#ff000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Light: initializing"
            android:id="@+id/io_light" android:textColor="#ff000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Battery: initializing"
            android:id="@+id/io_battery" android:textColor="#ff000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="GPS accuracy: initializing"
            android:id="@+id/io_gps_accuracy" android:textColor="#ff000000"/>
</LinearLayout>